<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="MapNotepad.Views.SingUpPage"
             Title="Create Account">
    <StackLayout>
        <Entry Text="{Binding UsernameEntry}" 
               Placeholder = "Username" 
               HeightRequest="60"
               Margin="50, 200, 50, 0" />
        <Entry Text="{Binding EmailEntry}" 
               Placeholder = "Email address" 
               HeightRequest="60"
               Margin="50, 0, 50, 0" 
               Keyboard="Email"/>
        <Entry Text="{Binding PasswordEntry}"
               Placeholder = "Password" 
               HeightRequest="60"
               IsPassword ="True" 
               Margin="50, 0, 50, 0" />
        <Entry Text="{Binding SPasswordEntry}"
               Placeholder = "Confirm password"
               HeightRequest="60"
               IsPassword ="True" 
               Margin="50, 0, 50, 0" />
        <Button Command="{Binding SingUpBClick}"
                IsEnabled="{Binding IsButtonEnable}" 
                Text = "Register" 
                BackgroundColor="#29D695"
                TextColor="Black"
                CornerRadius ="10"
                Margin="50, 60, 50, 0" />
    </StackLayout>
</ContentPage>