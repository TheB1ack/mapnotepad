<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="MapNotepad.Views.SingInPage">
    <StackLayout>
        <Entry Text="{Binding EmailEntry}"
                   Placeholder = "Email address"
                   HeightRequest="60"
                   Margin="50, 200, 50, 0" />
        <Entry Text="{Binding PasswordEntry}"
                   Placeholder = "Password" 
                   IsPassword ="True" 
                   HeightRequest="60"
                   Margin="50, 0, 50, 0"/>
        <Button Command ="{Binding SingInBClick}" 
                    IsEnabled="{Binding IsButtonEnable}" 
                    Text="Login" 
                    BackgroundColor="#29D695"
                    TextColor="Black"
                    CornerRadius ="10"
                    Margin="50, 60, 50, 0"/>
        <Label Text="Don't have an account?"
               TextColor="Black"
               HorizontalOptions="Center"/>
        <Button Command ="{Binding CreateAccountBClick}" 
                    Text="Create account"
                    BackgroundColor="#29D695"
                    TextColor="Black"
                    CornerRadius ="10"
                    Margin="50, 0, 50, 0"/>
    </StackLayout>
</ContentPage>