<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:controls="clr-namespace:MapNotepad.Controls"
             x:Class="MapNotepad.Custom.SearchBarWithButtons">
    
    <Frame Padding="2"
           Margin="0"
           BorderColor="Black"
           CornerRadius="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>

            <ImageButton Grid.Column="0"
                         Source="Search_Image.png"/>

            <controls:BorderlessEntry Grid.Column="1"
                                      TextColor="Black"/>

            <ImageButton Grid.Column="2"
                         Source="Cancel_Image.png"/>

            <ImageButton Grid.Column="3"
                         Source="Settings_Button.png"/>
        </Grid>
    </Frame>
    
</ContentPage>